{
  "name": "goblindegook.com",
  "repository": "github:goblindegook/goblindegook.com",
  "author": "Luis Rodrigues <hello@goblindegook.com>",
  "license": "CC-BY-NC-4.0",
  "private": true,
  "scripts": {
    "build": "npm run build:site && npm run build:search",
    "build:preview": "hugo --gc --minify --buildDrafts --buildFuture && npm run build:search",
    "build:search": "node --experimental-json-modules scripts/search-index.mjs",
    "build:site": "hugo --gc --minify",
    "format": "biome check --apply {assets, test}/**.ts",
    "lint": "concurrently 'npm run lint:scripts' 'npm run lint:styles'",
    "lint:styles": "stylelint 'assets/**/*.css'",
    "lint:scripts": "biome check {assets,test}/**.ts",
    "watch": "concurrently 'npm test' 'hugo serve --buildDrafts --buildFuture'",
    "test": "vitest"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.8.0",
    "@types/dompurify": "^3.0.5",
    "@types/estimate": "^1.0.3",
    "@types/imagesloaded": "^4.1.6",
    "@types/masonry-layout": "^4.2.7",
    "@types/webfontloader": "^1.6.38",
    "autoprefixer": "^10.4.18",
    "caniuse-lite": "^1.0.30001591",
    "concurrently": "^9.1.2",
    "css-modularscale": "^1.1.1",
    "cssnano": "^7.0.1",
    "esbuild": "^0.25.5",
    "html-entities": "^2.0.3",
    "jsdom": "^26.1.0",
    "pixrem": "^5.0.0",
    "postcss": "^8.4.32",
    "postcss-cli": "^11.0.0",
    "postcss-import": "^16.0.1",
    "postcss-preset-env": "^10.2.3",
    "prettier": "^3.2.5",
    "stopwords-en": "^0.3.0",
    "stylelint": "^16.2.1",
    "stylelint-config-standard": "^38.0.0",
    "stylelint-prettier": "^5.0.0",
    "tslib": "^2.6.2",
    "typescript": "^5.3.3",
    "vitest": "^3.2.3"
  },
  "dependencies": {
    "@barba/core": "^2.9.7",
    "@barba/prefetch": "^2.1.10",
    "@msgpack/msgpack": "^3.0.0-beta2",
    "@pacote/bloom-search": "^0.17.3",
    "animate.css": "^4.1.0",
    "dompurify": "^3.0.9",
    "estimate": "^1.0.0",
    "imagesloaded": "^5.0.0",
    "littlefoot": "^4.1.1",
    "masonry": "^0.0.2",
    "masonry-layout": "^4.2.1",
    "normalize.css": "^8.0.0",
    "smartypants": "^0.1.1",
    "snarkdown": "^2.0.0",
    "stemmer": "^2.0.0",
    "vanjs-core": "^1.3.0",
    "webfontloader": "^1.6.28"
  }
}
