{
  "name": "goblindegook.com",
  "repository": "github:goblindegook/goblindegook.com",
  "author": "Luis Rodrigues <hello@goblindegook.com>",
  "license": "CC-BY-NC-4.0",
  "private": true,
  "scripts": {
    "prebuild": "yarn test",
    "postbuild": "yarn build:search",
    "build": "hugo --gc --minify",
    "build:preview": "yarn build -- --buildDrafts --buildFuture",
    "build:search": "node --experimental-json-modules scripts/search-index.mjs",
    "lint": "concurrently 'yarn lint:styles' 'yarn lint:scripts'",
    "lint:styles": "stylelint 'assets/**/*.css'",
    "lint:scripts": "eslint '{assets,test}/**/*.ts'",
    "watch": "concurrently 'yarn test --watch' 'hugo serve --buildDrafts'",
    "pretest": "yarn lint",
    "test": "jest"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ]
  },
  "devDependencies": {
    "@pacote/eslint-config": "^5.0.0",
    "@pacote/eslint-config-jest": "^3.0.0",
    "@types/dompurify": "^2.0.1",
    "@types/estimate": "^1.0.0",
    "@types/imagesloaded": "^4.1.1",
    "@types/jest": "^27.0.2",
    "@types/masonry-layout": "^4.2.2",
    "@types/webfontloader": "^1.6.29",
    "@typescript-eslint/eslint-plugin": "^5.1.0",
    "@typescript-eslint/parser": "^5.1.0",
    "autoprefixer": "^10.0.1",
    "caniuse-lite": "^1.0.30001088",
    "concurrently": "^6.0.0",
    "css-modularscale": "^1.1.1",
    "cssnano": "^5.0.1",
    "eslint": "^8.1.0",
    "eslint-config-prettier": "^8.0.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.18.0",
    "eslint-plugin-jest": "^25.2.2",
    "eslint-plugin-jest-dom": "^3.1.7",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-testing-library": "^5.0.0",
    "html-entities": "^2.0.3",
    "jest": "^27.3.1",
    "pixrem": "^5.0.0",
    "postcss": "^8.1.9",
    "postcss-cli": "^9.0.1",
    "postcss-import": "^14.0.0",
    "postcss-preset-env": "^7.0.0",
    "prettier": "^2.2.0",
    "stopwords-en": "^0.3.0",
    "stylelint": "^14.0.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-standard": "^24.0.0",
    "stylelint-prettier": "^2.0.0",
    "ts-jest": "^27.0.7",
    "tslib": "^2.0.0",
    "typescript": "^4.1.2"
  },
  "dependencies": {
    "@barba/core": "^2.9.7",
    "@barba/prefetch": "^2.1.10",
    "@pacote/bloom-search": "^0.7.0",
    "animate.css": "^4.1.0",
    "dompurify": "^2.0.3",
    "estimate": "^1.0.0",
    "imagesloaded": "^4.1.4",
    "littlefoot": "^4.0.0-6",
    "masonry": "^0.0.2",
    "masonry-layout": "^4.2.1",
    "normalize.css": "^8.0.0",
    "smartypants": "^0.1.1",
    "snarkdown": "^2.0.0",
    "stemmer": "^2.0.0",
    "unfetch": "^4.0.1",
    "vanilla-lazyload": "^17.3.0",
    "webfontloader": "^1.6.28"
  }
}
