{
  "name": "goblindegook.com",
  "repository": "github:goblindegook/goblindegook.com",
  "author": "Luis Rodrigues <hello@goblindegook.com>",
  "license": "CC-BY-NC-4.0",
  "private": true,
  "scripts": {
    "build": "yarn run build:site && yarn run build:search",
    "build:preview": "hugo --gc --minify --buildDrafts --buildFuture && yarn run build:search",
    "build:search": "node --experimental-json-modules scripts/search-index.mjs",
    "build:site": "hugo --gc --minify",
    "lint": "concurrently 'yarn lint:scripts' 'yarn lint:styles'",
    "lint:styles": "stylelint 'assets/**/*.css'",
    "lint:scripts": "eslint '{assets,test}/**/*.ts'",
    "watch": "concurrently 'yarn test' 'hugo serve --buildDrafts --buildFuture'",
    "test": "vitest"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ]
  },
  "devDependencies": {
    "@pacote/eslint-config": "^6.0.1",
    "@pacote/eslint-config-jest": "^3.0.2",
    "@types/dompurify": "^3.0.3",
    "@types/estimate": "^1.0.0",
    "@types/imagesloaded": "^4.1.3",
    "@types/masonry-layout": "^4.2.2",
    "@types/webfontloader": "^1.6.29",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "autoprefixer": "^10.4.16",
    "caniuse-lite": "^1.0.30001543",
    "concurrently": "^8.2.1",
    "css-modularscale": "^1.1.1",
    "cssnano": "^6.0.0",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-n": "^16.1.0",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-testing-library": "^6.0.2",
    "eslint-plugin-vitest": "^0.3.2",
    "html-entities": "^2.0.3",
    "jsdom": "^22.1.0",
    "pixrem": "^5.0.0",
    "postcss": "^8.4.31",
    "postcss-cli": "^10.0.0",
    "postcss-import": "^15.0.0",
    "postcss-preset-env": "^9.1.4",
    "prettier": "^3.0.3",
    "stopwords-en": "^0.3.0",
    "stylelint": "^15.10.3",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-standard": "^34.0.0",
    "stylelint-prettier": "^4.0.2",
    "tslib": "^2.6.2",
    "typescript": "^5.2.2",
    "vitest": "^0.34.6"
  },
  "dependencies": {
    "@barba/core": "^2.9.7",
    "@barba/prefetch": "^2.1.10",
    "@msgpack/msgpack": "^3.0.0-beta2",
    "@pacote/bloom-search": "^0.17.3",
    "animate.css": "^4.1.0",
    "dompurify": "^3.0.6",
    "estimate": "^1.0.0",
    "imagesloaded": "^5.0.0",
    "littlefoot": "^4.0.1",
    "masonry": "^0.0.2",
    "masonry-layout": "^4.2.1",
    "normalize.css": "^8.0.0",
    "smartypants": "^0.1.1",
    "snarkdown": "^2.0.0",
    "stemmer": "^2.0.0",
    "vanjs-core": "^1.2.1",
    "webfontloader": "^1.6.28"
  }
}
