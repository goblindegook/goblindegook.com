{
  "name": "goblindegook.com",
  "repository": "git@gitlab.com:goblindegook/static.goblindegook.com.git",
  "author": "Luis Rodrigues <hello@goblindegook.com>",
  "license": "CC-BY-NC-4.0",
  "private": true,
  "scripts": {
    "postinstall": "cd themes/goblindegook && yarn",
    "prebuild": "yarn build-theme",
    "build": "hugo --gc --minify",
    "build-theme": "cd themes/goblindegook && yarn build",
    "build-preview": "yarn build -- --buildDrafts --buildFuture",
    "watch": "hugo serve --buildDrafts -t goblindegook",
    "sync": "git pull origin master && git push origin master",
    "deploy-dat": "yarn build && dat share public"
  }
}
