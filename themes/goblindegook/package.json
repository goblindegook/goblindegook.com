{
  "name": "hugo-theme-goblindegook",
  "version": "1.0.0",
  "description": "Hugo theme for goblindegook.com.",
  "author": "Lu√≠s Rodrigues",
  "license": "MIT",
  "private": true,
  "main": "static/js/index.js",
  "scripts": {
    "prebuild": "npm test",
    "build": "concurrently 'npm run build:styles' 'npm run build:ts'",
    "build:styles": "postcss src/css/styles.css --no-map --output static/css/styles.css",
    "build:ts": "rollup -c",
    "watch": "concurrently 'npm run watch:styles' 'npm run watch:ts' 'npm test -- --watch'",
    "watch:styles": "postcss src/css/styles.css --watch --output static/css/styles.css",
    "watch:ts": "rollup -c rollup.watch.js -w",
    "pretest": "tslint src/**/*.ts",
    "test": "jest"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ]
  },
  "devDependencies": {
    "@types/imagesloaded": "^4.1.1",
    "@types/jest": "^23.1.3",
    "@types/lunr": "^2.1.1",
    "@types/marked": "^0.4.0",
    "@types/masonry-layout": "^4.2.0",
    "@types/webfontloader": "^1.6.29",
    "caniuse-lite": "^1.0.30000792",
    "concurrently": "^3.5.0",
    "css-modularscale": "^1.1.1",
    "cssnano": "^3.10.0",
    "jest": "^23.2.0",
    "pixrem": "^4.0.1",
    "postcss": "^6.0.21",
    "postcss-cli": "^5.0.0",
    "postcss-cssnext": "^3.1.0",
    "postcss-import": "^11.1.0",
    "rollup": "^0.62.0",
    "rollup-plugin-commonjs": "^9.1.0",
    "rollup-plugin-node-resolve": "^3.3.0",
    "rollup-plugin-typescript": "^0.8.1",
    "rollup-plugin-uglify": "^4.0.0",
    "rollup-watch": "^4.3.1",
    "stylelint": "^9.1.3",
    "stylelint-config-standard": "^18.2.0",
    "ts-jest": "^23.0.0",
    "tslint": "^5.9.1",
    "tslint-config-standard": "^7.0.0",
    "typescript": "^2.8.1"
  },
  "dependencies": {
    "animate.css": "^3.6.1",
    "barba.js": "^1.0.0",
    "estimate": "^1.0.0",
    "imagesloaded": "^4.1.4",
    "insane": "^2.6.2",
    "littlefoot": "^1.0.6",
    "lunr": "^2.1.2",
    "marked": "^0.4.0",
    "masonry": "^0.0.2",
    "masonry-layout": "^4.2.1",
    "normalize.css": "^8.0.0",
    "tslib": "^1.7.1",
    "unfetch": "^3.0.0",
    "vanilla-lazyload": "8.2.1",
    "webfontloader": "^1.6.28"
  }
}
